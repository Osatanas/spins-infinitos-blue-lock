local player = game.Players.LocalPlayer
local spinRemote = game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("SpinStyle")

-- Loop infinito de spins de estilo
while true do
    task.wait(1) -- intervalo entre spins (ajust√°vel)
    spinRemote:InvokeServer("Spin") -- executa o spin de estilo
end
